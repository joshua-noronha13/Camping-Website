<% include ./partials/header %>
</head>
    <body>
    <% include ./partials/navbar %>
    <style>
        #main{
            background-color:#111;
        }
    </style>
    <div class="row">
        <h1 style="text-align: center">Edit <%= campground.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" value="<%= campground.name %>" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" value="<%= campground.image %>" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="desc" value="<%= campground.description %>" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="start" value="<%= campground.startDate %>" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="end" value="<%= campground.endDate %>" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="loc" value="<%= campground.location %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Edit</button>
                </div>
            </form>
                <form method="POST" action="/campgrounds/<%=campground._id%>?_method=DELETE">
                    <div class="form-group">
                        <button class="btn btn-lg btn-danger btn-block">Delete</button>
                    </div>
                </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
<% include ./partials/footer %>

