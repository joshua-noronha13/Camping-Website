<% include ./partials/header %> 
</head>
    <body>
    <% include ./partials/navbar %>
    <style>
        #main{
            background-color:#111;
            margin-bottom:20px;
        }
        #width{
            height:60px
        }
    </style>
 <div class="container">
     <header class="jumbotron">
         <div class="container">
             <h1>Welcome To CampStop!</h1>
             <p>View our hand-picked campgrounds from all over the world</p>
             <p>
                 <% if (currentUser && currentUser.role=="organiser") {%>
                <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>
                <% } %>
             </p>
         </div>
     </header>
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% campground.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6" id="width">
                <div class="thumbnail">
                   <img src="<%= campground.image %>">
                   <p>
                       <h4><%= campground.name %></h4>
                   </p>
                   <p>
                       <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ./partials/footer %>
